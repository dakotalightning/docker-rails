<% if users.size > 0 %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>
      </thead>

      <tbody>
        <% users.each do |user| %>
          <tr>
            <td><%= user.display_name %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td class="text-right">
              <%= link_to "View", admin_user_path(user), class: "btn btn-default btn-sm" %>
              <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
<% else %>
  <div class="alert alert-info" role="alert">
    <p>No users.</p>
  </div>
<% end %>
